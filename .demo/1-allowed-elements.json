{
  "$schema": "https://demotime.show/demo-time.schema.json",
  "title": "1. Allowed Elements",
  "description": "How to edit the Allowed Elements in Umbraco 16",
  "version": 2,
  "demos": [
    {
      "title": "Show RichTextEditor settings",
      "description": "Highlight the `RichTextEditor` section in appSettings.",
      "steps": [
        {
          "action": "open",
          "path": "TinyMceUmbraco16.Web/appsettings.json"
        },
        {
          "action": "replace",
          "path": "TinyMceUmbraco16.Web/appsettings.json",
          "highlightWholeLine": true,
          "insertTypingMode": "instant",
          "position": "1:500",
          "contentPath": ".demo/allowed-elements/appsettings-reset.json"
        },
        {
          "action": "highlight",
          "path": "TinyMceUmbraco16.Web/appsettings.json",
          "position": "31:33",
          "highlightWholeLine": true,
          "zoom": 4
        }
      ]
    },
    {
      "title": "Add valid elements",
      "description": "Add the `ValidElements` to the RichTextEditor section in appSettings",
      "steps": [
        {
          "action": "highlight",
          "position": "32:32",
          "highlightWholeLine": true,
          "path": "TinyMceUmbraco16.Web/appsettings.json",
          "zoom": 5
        },
        {
          "action": "replace",
          "path": "TinyMceUmbraco16.Web/appsettings.json",
          "position": "32:32",
          "highlightWholeLine": true,
          "insertTypingMode": "instant",
          "contentPath": ".demo/allowed-elements/valid-elements.txt",
          "zoom": 5
        }
      ]
    },
    {
      "title": "Rebuild and run the site",
      "description": "Rebuild the site to apply the new appSettings",
      "steps": [
        {
          "action": "closeTerminal",
          "terminalId": "demo-build"
        },
        {
          "action": "waitForTimeout",
          "timeout": 10
        },
        {
          "action": "executeTerminalCommand",
          "command": "cd TinyMceUmbraco16.Web",
          "terminalId": "demo-build"
        },
        {
          "action": "executeTerminalCommand",
          "command": "dotnet build",
          "terminalId": "demo-build"
        },
        {
          "action": "executeTerminalCommand",
          "command": "dotnet run",
          "terminalId": "demo-build"
        },
        {
          "action": "waitForTimeout",
          "timeout": 10000
        },
        {
          "action": "openWebsite",
          "url": "http://localhost:11070/umbraco/section/content/workspace/document/edit/73b03bcf-3016-4543-8bab-269b78abe844/invariant",
          "openInVSCode": false
        }
      ],
      "id": "demo-mf5x83ew-25q6"
    },
    {
      "title": "Add details summary and code",
      "description": "Add the `,details[*],summary[*],code[*]` to the `ValidElements` in appSettings",
      "steps": [
        {
          "action": "write",
          "path": "TinyMceUmbraco16.Web/appsettings.json",
          "position": "32,1923",
          "highlightWholeLine": false,
          "insertTypingMode": "character-by-character",
          "content": ",details[*],summary[*],code[*]"
        },
        {
          "action": "highlight",
          "position": "32,1923:32,1953",
          "highlightWholeLine": false,
          "path": "TinyMceUmbraco16.Web/appsettings.json",
          "zoom": 5
        }
      ],
      "id": "demo-mf5wgtco-y87f"
    },
    {
      "title": "Rebuild the site again",
      "description": "Rebuild the site to apply the new appSettings",
      "steps": [
        {
          "action": "closeTerminal",
          "terminalId": "demo-build",
          "command": "dotnet build"
        },
        {
          "action": "waitForTimeout",
          "timeout": 10
        },
        {
          "action": "executeTerminalCommand",
          "terminalId": "demo-build",
          "command": "cd TinyMceUmbraco16.Web"
        },
        {
          "action": "executeTerminalCommand",
          "terminalId": "demo-build",
          "command": "dotnet build"
        },
        {
          "action": "executeTerminalCommand",
          "terminalId": "demo-build",
          "command": "dotnet run"
        },
        {
          "action": "waitForTimeout",
          "timeout": 10000
        },
        {
          "action": "openWebsite",
          "url": "http://localhost:11070/umbraco/section/content/workspace/document/edit/73b03bcf-3016-4543-8bab-269b78abe844/invariant",
          "openInVSCode": false
        }
      ],
      "id": "demo-mf5xkfvt-zvu2"
    }
  ]
}